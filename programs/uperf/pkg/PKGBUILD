pkgname=uperf
pkgver=git
pkgrel=1
arch=('i386' 'x86_64' 'aarch64')
license=('GPL')
source=("https://github.com/uperf/uperf.git" 'uperf_web.xml')
sha256sums=('SKIP' 'SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	autoreconf --install
	./configure --prefix $benchmark_path
	make
}

package()
{
	make_install_src_pkg

	pack_contents -L $srcdir/uperf_web.xml "$benchmark_path"
}
