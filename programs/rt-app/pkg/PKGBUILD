pkgname=rt-app
pkgver=git
pkgrel=1
url='https://github.com/scheduler-tools/rt-app'
arch=('i386' 'x86_64' 'aarch64')
license=('GPL')
source=("https://github.com/scheduler-tools/rt-app.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	make_src_pkg --prefix=$benchmark_path
}

package()
{
	make_install_src_pkg

	DESTDIR=$benchmark_path/workloads pack_src_pkg_contents "doc/examples/*.json"
}
