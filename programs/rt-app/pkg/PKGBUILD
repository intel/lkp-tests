pkgname=rt-app
pkgver=git
pkgrel=1
url='https://github.com/scheduler-tools/rt-app'
arch=('i386' 'x86_64' 'aarch64')
license=('GPL')
source=("https://github.com/scheduler-tools/rt-app.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	./autogen.sh
	./configure --prefix=$benchmark_path
	make
}

package()
{
	cd_src_pkg_dir

	make install

	pack_contents "doc/examples/*.json" $benchmark_path/workloads
}
