pkgname=phoronix-test-suite
pkgver=9
pkgrel=4.1
arch=('i386' 'x86_64' 'aarch64')
url="http://phoronix-test-suite.com/releases"
license=('GPLv3')
source=("http://phoronix-test-suite.com/releases/${pkgname}-${pkgver}.${pkgrel}.tar.gz")
md5sums=('7dc8f085701122f031516e03c439d347')

. $LKP_SRC/lib/env.sh
. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
	rename_versioned_src_pkg_dir ${pkgname}-$pkgver.$pkgrel
}

package()
{
	cd_src_pkg_dir

	sh install-sh

	pack_contents "/usr/bin/${pkgname}" ${pkgdir}/usr/bin
	pack_contents "/usr/share/${pkgname}" ${pkgdir}/usr/share
}
