pkgname=reaim
pkgver=7.0.1.13
pkgrel=1
url='https://sourceforge.net/projects/re-aim-7'
arch=('i386' 'x86_64' 'aarch64')
license=('GPL')
source=("https://sourceforge.net/projects/re-aim-7/files/re-aim/7.0.1.13/osdl-aim-$pkgver.tar.gz" 'reaim.patch')
md5sums=('925eb6675ce86cb011699f38468a1fd1' 'SKIP')

. $LKP_SRC/lib/install.sh
. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
	rename_versioned_src_pkg_dir osdl-aim-$pkgver
}

patch_source()
{
	cd_src_pkg_dir

	patch -p1 < "$srcdir/${pkgname}.patch"
}

build()
{
	cd_src_pkg_dir

	./bootstrap
	LDFLAGS=-laio \
	./configure --prefix=$benchmark_path
	make CFLAGS="-fcommon -I$srcdir/$pkgname/include -D_GNU_SOURCE -lm"
}

package()
{
	cd_src_pkg_dir

	pack_contents src/reaim data scripts $benchmark_path
}
