pkgname=mce-test
pkgver=git
pkgrel=1
url="https://github.com/aegl/mce-test"
arch=('x86_64' 'i386' 'aarch64')
license=('GPL')
source=("https://github.com/aegl/mce-test.git" "https://github.com/linux-test-project/ltp.git" "https://git.kernel.org/pub/scm/utils/cpu/mce/mce-inject.git")
md5sums=('SKIP' 'SKIP' 'SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	CPPFLAGS="" make_src_pkg
	make_src_pkg -- -C ../mce-inject
}

package()
{
	make_install_src_pkg
	make_install_src_pkg destdir="$pkgdir" -C ../mce-inject

	pack_src_pkg_contents
	pack_contents $srcdir/ltp $benchmark_path
}
