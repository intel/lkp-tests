pkgname=pepc
pkgver=git
pkgrel=1
url='https://github.com/intel/pepc.git'
arch=('x86_64' 'aarch64')
license=('GPL')
source=('https://github.com/intel/pepc.git')
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	git checkout release
	echo '#!/usr/bin/python3' > pepc
	git archive --format zip HEAD >> pepc
	chmod ug+x pepc
}

package()
{
	DESTDIR=$benchmark_path/bin pack_src_pkg_contents pepc
}
