pkgname=simd-stress
pkgver=git
pkgrel=1
pkgdesc="A benchmark to test SIMD."
arch=('i386' 'x86_64' 'aarch64')
license=('GPL')
source=("https://github.com/yu-chen-aero/simd-stress.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir
	gcc -O3 -Wall -W -static -march=skylake-avx512 simd-stress.c -o simd-stress -lpthread
}

package()
{
	pack_src_pkg_contents
}
