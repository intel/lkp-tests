pkgname=mdadm-selftests
pkgver=git
pkgrel=1
url='https://github.com/md-raid-utilities/mdadm'
arch=('i386' 'x86_64' 'aarch64')
license=('GPL')
source=("$pkgname"::'https://github.com/md-raid-utilities/mdadm.git')
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	# Remove -Werror to avoid
	#   <command-line>: error: "_FORTIFY_SOURCE" redefined [-Werror]
	#   cc1: all warnings being treated as errors
	sed -i "s/CWFLAGS ?= -Wall -Werror/CWFLAGS = -Wall/" Makefile

	make test
}

package()
{
	pack_src_pkg_contents
}
