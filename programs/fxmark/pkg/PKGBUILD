pkgname=fxmark
pkgver=git
pkgrel=1
url='https://github.com/sslab-gatech/fxmark'
arch=('i386' 'x86_64' 'aarch64')
license=('GPL')
source=('https://github.com/sslab-gatech/fxmark.git' 'https://github.com/filebench/filebench.git')
md5sums=('SKIP' 'SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	make

	cd ../filebench
	git checkout 1.4.9.1
	libtoolize
	aclocal
	autoheader
	automake --add-missing
	autoconf
	./configure --prefix ${benchmark_path}/filebench
	make
	make install
}

package()
{
	pack_src_pkg_contents
}
