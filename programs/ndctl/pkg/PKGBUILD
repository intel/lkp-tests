pkgname=ndctl
pkgver=git
pkgrel=1
arch=('i386' 'x86_64' 'aarch64')
url="https://github.com/pmem/ndctl"
license=('GPL')
source=("https://github.com/pmem/ndctl.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	[[ -e '/usr/include/iniparser.h' ]] || cp /usr/include/iniparser/* /usr/include/

	meson setup build
	meson configure -Dtest=enabled -Ddocs=disabled build
	meson compile -C build
}

package()
{
	cd_src_pkg_dir

	DESTDIR="${pkgdir}" meson install -C build
}
