pkgname=ndctl
pkgver=git
pkgrel=1
arch=('i386' 'x86_64' 'aarch64')
url="https://github.com/pmem/ndctl"
license=('GPL')
source=("https://github.com/pmem/ndctl.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

build()
{
	cd_src_pkg_dir

	meson_src_pkg -Drootprefix="${benchmark_path}" -Dtest=enabled -Ddocs=disabled -Diniparserdir=/usr/include/iniparser
}

package()
{
	meson_install_src_pkg
}
