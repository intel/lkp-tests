pkgname=blogbench
pkgver=1.2
pkgrel=1
arch=('i386' 'x86_64' 'aarch64')
url="https://github.com/jedisct1/Blogbench"
license=('GPL')
source=("https://download.pureftpd.org/pub/blogbench/$pkgname-$pkgver.tar.gz")
sha256sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
	rename_versioned_src_pkg_dir
}

build()
{
	cp /usr/share/misc/config.{guess,sub} $(get_src_pkg_dir)

	make_src_pkg
}

package()
{
	pack_src_pkg_contents src/blogbench
}
