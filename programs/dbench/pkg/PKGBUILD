pkgname=dbench
pkgver=git
pkgrel=1
url='https://github.com/sahlberg/dbench'
arch=('i386' 'x86_64' 'aarch64' 'aarch64')
license=('GPL')
source=('https://github.com/sahlberg/dbench.git')
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	./autogen.sh
	./configure --prefix $benchmark_path

	make dbench
}

package()
{
	cd_src_pkg_dir

	make install

	pack_src_pkg_contents loadfiles
}
