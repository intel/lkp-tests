pkgname=v4l2
pkgver=git
pkgrel=1
arch=('i386' 'x86_64' 'aarch64')
url="https://git.linuxtv.org/v4l-utils.git/"
license=('GPL')
source=("$pkgname"::"git://linuxtv.org/v4l-utils.git"
	"https://github.com/umlaeute/v4l2loopback.git")
md5sums=('SKIP' 'SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	meson setup build/
	ninja -C build/
}

package()
{
	DESTDIR=$benchmark_path ninja -C build/ install

	pack_contents "$srcdir/v4l2loopback" "${pkgdir}/lkp/benchmarks"
}
