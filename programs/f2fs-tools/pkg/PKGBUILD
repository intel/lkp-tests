pkgname=f2fs-tools
pkgver=git
pkgrel=1
pkgdesc="Tools for Flash-Friendly File System (F2FS) (git version)"
arch=('i386' 'x86_64' 'aarch64')
url="http://sourceforge.net/projects/f2fs-tools/"
license=('GPL')
depends=('')
provides=('f2fs-tools')
conflicts=('f2fs-tools')
source=("https://git.kernel.org/pub/scm/linux/kernel/git/jaegeuk/f2fs-tools.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	./autogen.sh
	./configure --prefix=/usr --sbindir=/usr/bin
	make
}

package()
{
	cd_src_pkg_dir

	make install DESTDIR="$pkgdir" sbindir=/usr/bin
}
