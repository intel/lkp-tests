pkgname=coremark
pkgver=git
pkgrel=1
arch=('i386' 'x86_64' 'riscv64' 'aarch64')
url="https://github.com/eembc/coremark.git"
license=('GPL')
source=("https://github.com/eembc/coremark.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	make_src_pkg -- XCFLAGS="$CFLAGS -DMULTITHREAD=`nproc` -DUSE_FORK=1" compile
}

package()
{
	pack_src_pkg_contents
}
