pkgname=bust-shm-exit
pkgver=git
pkgrel=0
pkgdesc="bust-shm-exit benchmark source for LKP-tests "
arch=('i386' 'x86_64' 'aarch64')
url="https://github.com/gaowanlong/bust_shm_exit"
license=('GPL')
source=("$pkgname"::"https://github.com/gaowanlong/bust_shm_exit.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	gcc -O2 -o bust_shm_exit bust_shm_exit.c -lpthread
}

package()
{
	pack_src_pkg_contents bust_shm_exit
}
