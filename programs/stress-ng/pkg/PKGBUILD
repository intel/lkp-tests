pkgname=stress-ng
pkgver=git
pkgrel=1
pkgdesc="tool to load and stress a computer"
arch=('i386' 'x86_64' 'riscv64' 'aarch64')
url="http://kernel.ubuntu.com/~cking/stress-ng/"
license=('GPL')
source=("https://github.com/ColinIanKing/stress-ng.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	make_src_pkg
}

package()
{
	make_install_src_pkg DESTDIR="$pkgdir"

	cd_src_pkg_dir
	# stress-watchdog.c
	mkdir -p $benchmark_path
	ls stress-*.c > $benchmark_path/tests
}
