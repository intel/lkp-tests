pkgname=mcperf
pkgver=git
pkgrel=0
pkgdesc="A tool for measuring memcached server performance"
arch=('i386' 'x86_64' 'aarch64')
url="https://github.com/twitter-archive/twemperf/"
license=('GPL')
source=("$pkgname"::"https://github.com/twitter-archive/twemperf.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	autoreconf -fvi
	CFLAGS="-ggdb3 -O0" ./configure --enable-debug
	make
}

package()
{
	pack_src_pkg_contents
}
