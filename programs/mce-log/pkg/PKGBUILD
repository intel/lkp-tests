pkgname=mce-log
pkgver=git
pkgrel=1
url="https://github.com/andikleen/mcelog"
arch=('x86_64' 'i386' 'aarch64')
license=('GPL')
source=("$pkgname"::"https://github.com/andikleen/mcelog.git" "https://git.kernel.org/pub/scm/utils/cpu/mce/mce-inject.git" "https://github.com/aegl/mce-test.git")
md5sums=('SKIP' 'SKIP' 'SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	make
	make -C ../mce-inject
	CPPFLAGS="" make -C ../mce-test
}

package()
{
	pack_src_pkg_contents

	cd_src_pkg_dir

	make install destdir="$pkgdir" -C ../mce-inject

	make install -C ../mce-test

	pack_contents ../mce-test/bin/page-types "${pkgdir}/usr/bin"
}
