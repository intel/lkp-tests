pkgname=sockperf
pkgver=git
pkgrel=1
url="https://github.com/Mellanox/sockperf"
arch=('x86_64' 'i386' 'aarch64')
license=('GPL')
source=("https://github.com/Mellanox/sockperf.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	git checkout -q -b build origin/sockperf_v2
	./autogen.sh
	./configure
	make
}

package()
{
	pack_src_pkg_contents
}
