pkgname=cyclictest
pkgver=git
pkgrel=1
pkgdesc="Cyclictest is a high resolution test program"
arch=('i386' 'x86_64' 'riscv64' 'aarch64')
url="https://git.kernel.org/pub/scm/utils/rt-tests/rt-tests"
license=('GPL')
source=("$pkgname"::"https://git.kernel.org/pub/scm/utils/rt-tests/rt-tests.git")
md5sums=('SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir

	make
}

package()
{
	cd_src_pkg_dir

	make install prefix=$benchmark_path
}
