pkgname=analyze-suspend
pkgver=git
pkgrel=1
arch=('i386' 'x86_64')
url="https://github.com/intel/pm-graph.git"
license=('GPL')
source=("https://github.com/intel/pm-graph.git"
	"https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git"
	"https://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git")
md5sums=('SKIP' 'SKIP' 'SKIP')

. $LKP_SRC/lib/tests/pkgbuild.sh

prepare()
{
	prepare_benchmark_path
}

build()
{
	cd_src_pkg_dir linux/tools/power/x86/turbostat
	make
}

package()
{
	pack_contents "${srcdir}/pm-graph/"* "${benchmark_path}"
	pack_contents "${srcdir}/linux/tools/power/x86/turbostat/turbostat" "${pkgdir}/lkp/benchmarks/turbostat"
	pack_contents "${srcdir}/linux-firmware/"* "${pkgdir}/usr/lib/firmware/"
}
